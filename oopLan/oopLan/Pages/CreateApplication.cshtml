@page
@model oopLan.Pages.CreateApplicationModel
@{
	ViewData["Title"] = "Create Application";
}
<div class="create-application-block">

	<form class="create-application" method="post">
		<label>Имя</label>
		<p><input class="input-text" type="text" maxlength="48" name="userName" autocomplete="off" required></p>
		<label>Email</label>
		<p><input class="input-text" type="email" name="userEmail" autocomplete="off" required /></p>
		<label>Название</label>
		<p><input class="input-text" type="text" maxlength="48" name="applicationName" autocomplete="off" required /></p>
		<label>Тип активности</label>
		<p><select class="input-text"  name="applicationActivity" required >
				@foreach (var activity in Model.activities)
				{
					<option value="@activity.ActivityID"> @activity.Name </option>
				}
		</select></p>
		<label>Платформа проведения</label>
		<p>
			<select class="input-text" name="applicationPlatform" required>
				@foreach (var platform in Model.platforms)
				{
					<option value="@platform.PlatformId"> @platform.Name </option>
				}
			</select>
		</p>
		<label>Описание</label>
		<p><textarea class="input-description" name="applicationDescription" autocomplete="off" required></textarea></p>
		<label>Дата проведения</label>
		<p><input type="date" class="date-field" min="@Model.currentDate" name="datePlan" /></p>
		<p>
			<button action="@Model.CreateNewApplication()" class="input-button search-button" type="submit">Создать</button>
		</p>
	</form>
</div>
